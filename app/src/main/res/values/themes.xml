<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Medenjak" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorAccent">#FFCC00</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/dark_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFCC00</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">#FFCC00</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PrimaryColoredButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#FFCC00</item>
        <item name="android:textColor">#383F47</item>
    </style>

    <style name="SimpleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#FFCC00</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/selector_edit_text</item>
        <item name="android:textColorHint">@color/blend</item>
    </style>
</resources>